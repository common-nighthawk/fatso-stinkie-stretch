.row.filters
  .col-xs-4
    =link_to 'Shipped', inventories_path('shipped': 'shipped', 'warehouse': params[:warehouse]), class: btn_classes(:shipped, 'shipped')
    =link_to 'Not Shipped', inventories_path('shipped': 'not_shipped', 'warehouse': params[:warehouse]), class: btn_classes(:shipped, 'not_shipped')
    =link_to 'All', inventories_path(warehouse: params[:warehouse]), class: 'btn btn-default', class: btn_classes(:shipped)
