    - Warehouse.pluck(:name).each do |warehouse|
      =link_to warehouse.titleize, inventories_path('warehouse': warehouse, 'shipped': params[:shipped]), class: btn_classes(:warehouse, warehouse)
    =link_to 'All', inventories_path('shipped': params[:shipped]), class: btn_classes(:warehouse)
  .col-xs-4
    =link_to 'Clear Filters', inventories_path, class: btn_classes
